<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zufar.footballapps">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".view.HomeActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.matches.search.SearchMatchActivity"/>
        <activity android:name=".view.matches.detail.DetailMatchActivity">
        </activity>
        <activity android:name=".view.teams.detail.DetailTeamActivity">
        </activity>
        <activity android:name=".view.teams.search.SearchTeamActivity">
        </activity>
        <activity android:name=".view.teams.detail.Players.detail.DetailPlayerActivity">
        </activity>
    </application>

</manifest>